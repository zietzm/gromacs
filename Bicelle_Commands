; Box with first lipid
genbox -ci LIPID1.gro -nmol XXX -box XXX XXX XXX -try 500 -o lipid1.gro
grompp -minimization.mdp -c lipid1.gro -p lipid.top -maxwarn 10 -o lipid1-min.tpr
mdrun -deffnm lipid1-min -v - c lipid1-min1.gro

; Box with second lipid solvating the last output
genbox -cp lipid1-min1.gro -cs LIPID2.gro -o lipids.gro -maxsol YYY
grompp -minimization.mdp -c lipids.gro -p lipid.top -maxwarn 10 -o both-min.tpr
mdrun -deffnm both-min -v -c both-min1.gro

; Solvate with water
genbox genbox -cp both-min1.gro -cs water.gro -o water-lipids.gro -maxsol ZZZ -vdwd AAA
grompp -f minimization.mdp -c water-lipids.gro -p lipid.top -maxwarn 10 -o water-lipids-min.tpr
mdrun -deffnm water-lipids-min -v -c solvmin.gro

; Equilibrate the system
grompp -f martini_md.mdp ;be sure this is from Martini directly; -c solvmin.gro -p lipid.top -maxwarn 10 -o solv-md.tpr
mdrun -deffnm solv-md -v 
